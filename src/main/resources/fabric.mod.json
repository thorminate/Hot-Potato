{
	"schemaVersion": 1,
	"id": "hot-potato",
	"version": "${version}",
	"name": "hot-potato",
	"description": "Adds a simple Hot Potato game mode that can be activated using \"/starthotpotato\"",
	"authors": [
		"Thorminate"
	],
	"contact": {
		"homepage": "https://github.com/thorminate",
		"issues": "https://github.com/thorminate/Hot-Potato/issues",
		"sources": "https://github.com/thorminate/Hot-Potato"
	},
	"license": "CC0-1.0",
	"icon": "assets/hot-potato/icon.png",
